<p id="notice"><%= notice %></p>

<h1>登録患者一覧</h1>
<br>
<br>
<table align="center" rules="rows" width="600" height="200">
  <thead>
    <tr>
      <th>お名前</th>
      <th>登録日時</th>
      <th>✔︎</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><h3><%= link_to user.name, user %></h3></td>
        <td><h3><%= user.created_at %></h3></td>
        <td><input type="checkbox"></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '登録画面へ', new_user_path %>
